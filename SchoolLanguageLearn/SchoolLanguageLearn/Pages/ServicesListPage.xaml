<Page x:Class="SchoolLanguageLearn.Pages.ServicesListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolLanguageLearn.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ServicesListPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <ScrollViewer HorizontalAlignment="Center" HorizontalScrollBarVisibility="Disabled"  Grid.Row="1" >
            <WrapPanel  x:Name="ServiceWp" ></WrapPanel>
        </ScrollViewer>
        <Button x:Name="AddBtn" Grid.Row="2">Добавить</Button>
        

    </Grid>
</Page>
